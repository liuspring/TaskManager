@using Abp.Web.Mvc.Extensions
@using Common
@using TaskManager.Enum
@{
    ViewBag.Title = "异常日志列表";
    ViewBag.TitleSmall = "";

    ViewBag.Breadcrumb = new Breadcrumb(new Crumb[] {
        new Crumb("日志管理", "", "fa-dashboard"),
        new Crumb("异常日志列表", "", "")
    });
}
@section scripts
{
    @Html.IncludeScript("~/Views/Errors/Index.js")
}
<div class="panel panel-default">
    <div class="panel-body">
        <div class="col-md-6">
            <div class="input-group">
                @Html.DropDownList("Content", EnumExt.GetSelectList(typeof(EnumTaskCommandName)),
                "", new { @class = "form-control" })
                <span class="input-group-btn">
                    <button class="btn btn-success" type="button" id="btnSearch">
                        搜索
                    </button>
                </span>
            </div>
        </div>
    </div>
</div>
<div class="tab-content panel panel-default">
    <div class="panel-body active table-responsive">
        <table id="tb_error" class="table table-bordered table-hover dataTable">
            <thead>
                <tr>
                    <th>序号</th>
                    <th>任务名称</th>
                    <th>节点名称</th>
                    <th>用户名</th>
                    <th>内容</th>
                    <th>创建时间</th>
                    <th>类型</th>
                    <th class="hidden">操作</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>
