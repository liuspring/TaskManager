@using Abp.Web.Mvc.Extensions
@{
    ViewBag.Title = "分类列表";
    ViewBag.TitleSmall = "";

    ViewBag.Breadcrumb = new Breadcrumb(new Crumb[] {
        new Crumb("任务管理", "", "fa-dashboard"),
        new Crumb("分类列表", "", "")
    });
}
@section scripts
{
    @Html.IncludeScript("~/Views/Categories/Index.js")
}
<div class="panel panel-default">
    <div class="panel-body">
        <div class="col-md-6">
            <div class="input-group">
                <input class="form-control" id="Content" name="Content" placeholder="请输入分类名称" value="" maxlength="50" />
                <span class="input-group-btn">
                    <button class="btn btn-success" type="button" id="btnSearch">
                        搜索
                    </button>
                </span>
            </div>
        </div>
    </div>
</div>

<div class="panel panel-default">
    <div class="panel-body">
        <div class="col-md-5">
            <div class="input-group">
                <a href="" class="btn btn-primary" data-toggle="modal" data-target="#CategoryModal">新增</a>
            </div>
        </div>
    </div>
</div>

<div class="tab-content panel panel-default">
    <div class="panel-body active table-responsive">
        <table id="tb_category" class="table table-bordered table-hover dataTable">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>分类名称</th>
                    <th>创建时间</th>
                    <th class="hidden">操作</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>

<div class="modal fade" id="CategoryModal" tabindex="-1" role="dialog" aria-labelledby="CategoryModalLabel" data-backdrop="static">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form name="CategoryForm" role="form" novalidate class="form-horizontal">
                <div class="modal-header">
                    <h4 class="modal-title">
                        <span>分类信息</span>
                    </h4>
                </div>
                <div class="modal-body">
                    <div class="panel-body">
                        <div class="form-group">
                            <label class="control-label col-lg-2" for="CategoryName">分类名称</label>
                            <div class="col-lg-9">
                                <input type="text" class="form-control" id="CategoryName" name="CategoryName" value=""
                                       placeholder="请输入分类名称" required maxlength="50">
                            </div>
                        </div>

                    </div>
                    <div class="hidden">
                        <input type="hidden" id="Id" name="Id" value="" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
                    <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> <span>保存</span></button>
                </div>
            </form>
        </div>
    </div>
</div>
